<configuration>
    <appender name="STDOUT" target="System.out" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern><![CDATA[
             %d | %contextName | %14.14thread | %5.5level | %class{36}.%M | %msg %n
           ]]></pattern>
        </encoder>
    </appender>

    <logger name="com.accela" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
